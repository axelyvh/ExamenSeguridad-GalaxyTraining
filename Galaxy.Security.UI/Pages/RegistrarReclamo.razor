@page "/reclamo/nuevo"
@attribute [Authorize(Roles = "Manager")]
@using Galaxy.Security.UI.Services
@using Microsoft.AspNetCore.Components.Authorization
@inject HttpClient http
@inject IToastService ToastService
<PageTitle>Registro Reclamo</PageTitle>


<EditForm Model="ReclamoModel" OnValidSubmit="OnRegistrarReclamo">
    <input type="text" class="input-field" placeholder="Ingrese descripcion" @bind="ReclamoModel.Descripcion" />
    <input type="date" class="date-field" placeholder="Seleccione fecha" @bind="ReclamoModel.Fecha" />
    <button type="submit" class="btn-submit">
        <i class="bi bi-box-arrow-in-right"></i>
        Registrar
    </button>
    <br />
    <br />
    <button type="button" class="btn-regresar" @onclick="GoToMenu">
        <i class="bi bi-box-arrow-in-right"></i>
        Regresar
    </button>
</EditForm>